<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manual_select">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/ll1">

    <TextView
        android:id="@+id/languagetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textSize="35sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <CheckBox
          android:id="@+id/englan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="English" />

      <CheckBox
          android:id="@+id/hinlan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Hindi" />

      <CheckBox
          android:id="@+id/punlan"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Punjabi" />
    </LinearLayout>
    <TextView
        android:id="@+id/moodtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mood"
        android:textSize="35sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <CheckBox
          android:id="@+id/happycb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Happy" />

      <CheckBox
          android:id="@+id/sadcb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Sad" />

      <CheckBox
          android:id="@+id/romanticcb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Romantic" />
    </LinearLayout>

  </LinearLayout>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="408dp"
      android:layout_marginBottom="13dp"
      android:layout_marginLeft="300dp"
      android:text="Next"
      android:id="@+id/manualnext"/>



</RelativeLayout>